generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  profile   Profile?
}

model Profile {
  id             String   @id @default(cuid())
  userId         String   @unique
  sex            String?
  age            Int?
  heightCm       Int?
  weightKg       Int?
  targetWeightKg Int?
  activityLvl    String?
  goal           String?
  injuries       String[] @default([])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  duration  Int
  effort    Int
  createdAt DateTime @default(now())
}
